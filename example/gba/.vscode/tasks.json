    "version": "2.0.0",
    "tasks": [
        {
            "label": "Brewery",
            "type": "shell",
            "command": "${workspaceFolder}/../../src/ProjectTool/bin/Release/net6.0/Brewery.ProjectTool",
            "args": [
                "build",
                "${workspaceFolder}/ExampleGame.brewproj"
